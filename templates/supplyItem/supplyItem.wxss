.contain{
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-bottom: 10rpx;
  border-top:1rpx solid #e6e6e6;
  border-bottom:1rpx solid #e6e6e6
}

.avatar{
  width: 15%;
}

.avatar image{
  margin-left: 35rpx;
  margin-top: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.s_detail{
  width: 85%;
  display: flex;
  flex-direction: column;
}

.s_name{
  margin-top:20rpx;
  font-size: 35rpx;
  width:90%;
}

.change_status{
  width:10%;
  margin-top:12rpx;
  color:#e6e6e6;
  font-size:39rpx;
  font-weight: bolder;
  letter-spacing: 2rpx
}

.s_status{
  color:#e6e6e6;
  font-size: 25rpx;
  margin-top:15rpx;
  margin-bottom: 10rpx;
  margin: 15rpx
}

.row{
  display:flex;
  flex-direction:row;
  width:100%
}

.row image{
  width:120rpx;
  height: 120rpx;
  margin-right: 6rpx
}

.s_price{
  color:#e6e6e6;
  font-size: 25rpx;
  margin-top:15rpx;
  margin: 15rpx;
  width:90%;
}

.cooperate{
  width: 10%;
  margin-top:15rpx;
  color:#e6e6e6;
  font-size:25rpx;
  font-weight: bolder;
}

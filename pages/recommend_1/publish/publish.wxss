/* pages/orders/makeOrder/makeOrder.wxss */
page{
  height: 100%;
  background-color: #F3F3F3;
  overflow-y: hidden;
}
.address {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 20rpx 0;
  margin: 15rpx;
  background-color: #FFF;
  border-radius: 20rpx;
}

.division{
  margin: 0 20rpx 0 20rpx;
  height: 2rpx;
  background-color: #F3F3F3;
}
.orderBox{
  margin: 15rpx;
  border-radius: 20rpx;
  background-color: #FFF;
}

.itemBox{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  font-size: 25rpx;
  padding-top: 25rpx;
  margin: 0 20rpx 0 20rpx;
}

.itemBox .itemThumb{
  width: 160rpx;
  height: 160rpx;
}

.itemBox .itemTitle{
  padding-left: 25rpx;
  width: 75%;
  font-size: 30rpx;
  line-height: 50rpx;
}

.itemInfo {
  margin: 20rpx 20rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  min-height: 150rpx;
}

.itemInfo .itemType{
  position: absolute;
  left: 40rpx;
}

.itemInfo .itemCount{
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 30rpx;
}

.line{
  display: flex;
  padding: 20rpx;
  align-items: center;
  min-height: 50rpx;
  font-size: 30rpx;
}

.line text{
  min-width: 33%;
}

.line-right{
  min-width: 60%;
  text-align: right;
}

.line-image{
  flex: 1;
  text-align: right;
}

.line-image image{
  width: 30rpx;
  height: 25rpx;
}

.account{
  margin: 15rpx;
  border-radius: 20rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
}

.account .account-left{
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
}

.account .account-right{
  flex: 1;
  text-align: right;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
}

.submit {
  position: relative;
  left: 140rpx;
  background: #FF7111;
  color: white;
}

.photoContainer{
  width:600rpx;
  display: flex;
  flex-flow: row wrap;
  margin-top:20rpx;
  padding-bottom: 20rpx;
}

.photoContainer image{
  margin:10rpx;
  width:180rpx;
  height: 180rpx;
}

.background-img{
  margin:10rpx;
  width:180rpx;
  height: 180rpx; 
  position: relative;
}

.background-img .inner-text{
  position: absolute;
  bottom: 30rpx;
  left:10rpx;
  font-size:20rpx;
  z-index:2;
  width:100%;
  text-align: center
}
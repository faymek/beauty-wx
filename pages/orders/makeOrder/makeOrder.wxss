/* pages/orders/makeOrder/makeOrder.wxss */
page{
  height: 100%;
  background-color: #F3F3F3;
  overflow-y: hidden;
}
.address {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0 20rpx 0;
  margin: 15rpx;
  background-color: #FFF;
  border-radius: 20rpx;
}

.division{
  margin: 0 20rpx 0 20rpx;
  height: 2rpx;
  background-color: #F3F3F3;
}
.orderBox{
  margin: 15rpx;
  border-radius: 20rpx;
  background-color: #FFF;
}

.itemBox{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  font-size: 25rpx;
  padding-top: 25rpx;
  margin: 0 20rpx 0 20rpx;
}

.itemBox .itemThumb{
  width: 160rpx;
  height: 160rpx;
}

.itemBox .itemTitle{
  padding-left: 25rpx;
  width: 75%;
  font-size: 30rpx;
  line-height: 50rpx;
}

.itemInfo {
  margin: 20rpx 20rpx 0 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  min-height: 150rpx;
}

.itemInfo .itemType{
  position: absolute;
  left: 40rpx;
}

.itemInfo .itemCount{
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 30rpx;
}

.line{
  display: flex;
  padding: 20rpx;
  align-items: center;
  min-height: 50rpx;
  font-size: 30rpx;
}

.line text{
  min-width: 33%;
}

.line-right{
  min-width: 60%;
  text-align: right;
}

.line-image{
  flex: 1;
  text-align: right;
}

.line-image image{
  width: 30rpx;
  height: 25rpx;
}

.account{
  margin: 15rpx;
  border-radius: 20rpx;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
}

.account .account-left{
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
}

.account .account-right{
  flex: 1;
  text-align: right;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  background: #FFFFFF;
}

.total-text{
  position: relative;
  left: 250rpx;
}

.total-price{
  position: relative;
  left: 260rpx;
  width: 50rpx;
  color: red;
}

.submit {
  position: relative;
  left: 140rpx;
  background: #FF7111;
  color: white;
}

.mask {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 z-index: 9000;
 opacity: 0.7;
}
  
.modalDlg {
 width: 70%;
 height: 450rpx;
 position: fixed;
 top: 20%;
 left: 15%;
 z-index: 9999;
 background-color: #fff;
 border-radius: 6rpx;
 display: flex;
 flex-direction: column;
 align-items: center;
}

.modal-title {
  height: 10%;
  padding-top: 10rpx;
  font-size: 35rpx;
}

.modal-content {
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 40%;
}

.modal-content .price {
  display: flex;
  align-items: flex-start;
}

.modal-pay {
  align-self: flex-start;
  margin-left: 10%;
  height: 16%;
  width: 80%;
  border-top: 1rpx solid #DCDCDC;
  border-bottom: 1rpx solid #DCDCDC;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.modal-confirm {
  background-color: #1AAC19;
  width: 80%;
  margin-top: 4%;
  padding: 3% 0 3% 0;
  border-radius: 6rpx;
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
  
.close_mask {
 color: gray;
 position: absolute;
 left: 5%;
 top: 10rpx;
 /* top: -82%; */
 font-size: 32rpx;
}
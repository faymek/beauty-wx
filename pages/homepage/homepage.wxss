@import '../../templates/searchBox/searchBox.wxss';
@import '../../templates/goodItem/goodItem.wxss';
@import '../../templates/navItem/navItem.wxss';

.hotSearch{
  width: 100%;
  height: 57rpx;
  /* background: linear-gradient(to right,rgba(255, 224, 156, 0),rgba(255, 138, 79, 0.15)); */
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  align-items: center;
  z-index:1;
  position: sticky;
  top: 80rpx;
  background-color:white;
  padding-bottom:3px;
}

.wordHolder{
  align-items: center;
  justify-content: center;
  display: flex;
}

.titles{
  width:85%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.titleBlock{
  width:25%;
  height:100%;
  align-items: center;
  justify-content: center;
  display: flex;
}

.titleHolder{
  width:90%;
  height: 75%;
  border-radius: 30rpx;
  background: #FFFFFF;
  border: 2rpx solid #cdcdcd;
  color:#cdcdcd
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 2rpx;
}

.swiper-box .wx-swiper-dot {
  width: 40rpx;
  display: inline-flex;
  height: 10rpx;
  margin-left: 20rpx;
  justify-content: space-between;
}

.swiper-box .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
}

.swiper-box .wx-swiper-dot-active::before {
  background: #ff3f04d2;
}

swiper{
  height:250rpx
}

swiper image{
  height:100%;
  width:100%
}

.supply-banner {
  display: flex;
  justify-content:space-around;
}

.supply-banner > view {
  display:flex;
  flex-grow:1;
  align-items:center;
  background-color: #9DC8C8;
  color:white;
}

.supply-banner > view > view {
  display:flex;
  flex-direction: column;
  align-items:center;
}

.supply-banner text  {
  font-size:30rpx;
}

.supply-banner view image {
  padding: 50rpx;
  height:150rpx;
  width:150rpx;
}

.supply-banner view .title {
  font-size:40rpx;
  padding:10rpx;
  margin: 10rpx;
  width:200rpx;
  border-bottom:2rpx solid white;
  border-top:2rpx solid white;
}

.supply-banner .i-am-supply {
  background-color:rgb(181,182,187);
}

.info {
  max-height: 800rpx;
  padding:10rpx;
  font-size:25rpx;
}

.top{
  width: 100%;
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center; 
  background-color: #6A4135;
  text-align: center;
}

.middle{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
}

.bottom{
  font-size: 35rpx;
  color: #2FB42E;
  width: 260rpx;
  line-height: 60rpx;
  text-align: center;
  border: 3rpx solid #1AAD19;
  border-radius: 10rpx;
}

.box {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}
@import '../../../templates/goodItem/goodItem.wxss';

.header{
  width:100%;
  height:110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f8f8f8;
}

.sideButton{
  width:16%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center
}

.sideButton image{
  width:52%;
  height: 64%;
}

.searchInput{
  width:68%;
  height: 70%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 3rpx;
  background: #ffffff;
}

.searchInput input{
  width: 100%;
  height: 100%;
  color: #e4e4e4;
  font-size:35rpx;
}

.sortMethods{
  width:100%;
  height:110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f8f8f8;
}

.sortMethod{
  width:25%;
  height:100%;
  font-size:35rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sortMethod-on{
  color:#FE5400;
}











@import '/templates/supplyItem2/supplyItem2.wxss';

.header{
  width:100%;
  height:110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #f8f8f8;
}

.sideButton{
  width:16%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center
}

.sideButton image{
  width:52%;
  height: 64%;
}

.searchInput{
  width:68%;
  height: 70%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 3rpx;
  background: #ffffff;
  border: 1rpx solid #e4e4e4

}

.searchInput input{
  width: 100%;
  height: 100%;
  color: #e4e4e4;
  font-size:35rpx;
}

.sortMethods{
  background: #FFFFFF;
  width:100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border: 1rpx solid #e4e4e4;
  position: sticky;
  top:0;
}

.sortMethod{
  width:33%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center
}

.sortMethod-on{
  color:#FE5400;
}

.sortSignal{
  background: #FE5400
}
.profile{
  height: 170rpx;
  text-align: left; 
  padding: 50rpx 0 0 50rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  background-color: #AAEEFF;
  box-shadow: 0rpx 0rpx 50rpx 5rpx #aaaaaa
}

.baseinfo{
  margin-left: 40rpx;
  color: #fff
}
.avatar image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  padding-right: 0rpx;
  background-color :#fff;
}


.panel,.ul,.entry,.info-box{background-color:#fff;font-size :28rpx;}
/*panel*/
.panel{
  margin: 10rpx 0;
}
.panel-hd{
  display: flex;
  min-height: 88rpx;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
}
.panel-hd-l{
  margin-right: 28rpx;
}
.panel-ft{
  border-top: 1rpx solid #dcdcdc;
}
/*列表*/
.ul{
  margin-bottom: 20rpx;
}

.li{
  display: flex;
  padding: 20rpx;
  align-items: center;
  min-height: 88rpx;
  overflow: hidden;
}

.li-right{
  flex: 1;
  margin-right: 40rpx;
  text-align: right
}

.tab{
  display: flex;
  line-height: 1;
  text-align: center; 
  border-bottom: 1rpx solid #DCDCDC;
  background-color:#fff;
  justify-content: center;
  margin-bottom: 20rpx;
}

.tab-item{
  flex: 1;
  padding: 0rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab-icon{
  position:relative;
  flex: 1;
  width: 60rpx;
  height: 60rpx;
  margin: 12rpx 0;
  font-size: 18px;
}
.tab-item.active{
  color:#ff4d61;
  border-bottom: 4rpx solid #ff4d61;
}
.no-border{
  border:0;
}
.panel-hd{
  padding: 0 28rpx;
}
.ul-user .li{
  padding:0 28rpx;
}
.ul-user .li,.ul-user .li:last-child:after{
  border:0
}
.ul-user .li:after{
  content: "";
  position: absolute;
  border-bottom: 1rpx solid #DCDCDC;
  bottom: 0;
  left: 0;
  margin-left: 88rpx;
  width: 100%;
  height: 1rpx;
}
.ul-user .li-hd{
  margin-right: 28rpx;
}
.ul-user .li-bd{
  width: 160rpx;
}

.ul-user .li-image{
  flex:1;
  text-align: right;
}

.li-image image{
  width: 30rpx;
  height: 25rpx;
}

.division{
  margin-left: 20rpx;
  height: 1px;
  background-color: #dcdcdc;
}